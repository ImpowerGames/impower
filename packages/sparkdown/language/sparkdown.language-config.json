{
  "comments": {
    "lineComment": "//",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "<",
      ">"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "<",
      "close": ">"
    },
    {
      "open": "`",
      "close": "`"
    },
    {
      "open": "\"",
      "close": "\""
    }
  ],
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "`",
      "`"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "*",
      "*"
    ],
    [
      "_",
      "_"
    ],
    [
      "~",
      "~"
    ],
    [
      ":",
      ":"
    ],
    [
      "^",
      "^"
    ],
    [
      "|",
      "|"
    ],
    [
      "<",
      ">"
    ]
  ],
  "wordChars": "_'",
  "wordPattern": {
    "pattern": "(\\p{L}|\\p{N}|\\p{Mn})(((\\p{L}|\\p{N}|\\p{Mn})|[_]|['])?(\\p{L}|\\p{N}|\\p{Mn}))*",
    "flags": "u"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(?:[-]|[_\\p{L}][_\\p{L}0-9]*[:]|(?:DEFINE)\\b.*?[:])\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "\\{\\s*$",
      "afterText": "^\\s*\\}.*$",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "\\{\\s*$",
      "afterText": "^(?!\\s*\\})",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "\\[\\s*$",
      "afterText": "^\\s*\\].*$",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "\\[\\s*$",
      "afterText": "^(?!\\s*\\])",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "\\(\\s*$",
      "afterText": "^\\s*\\).*$",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "\\(\\s*$",
      "afterText": "^(?!\\s*\\))",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*$",
      "action": {
        "indent": "none",
        "deleteText": "  "
      }
    },
    {
      "beforeText": "^\\s*",
      "action": {
        "indent": "none"
      }
    }
  ]
}