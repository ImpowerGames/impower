{
  "name": "@impower/sparkdown-language-server",
  "description": "A language server for sparkdown.",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "*"
  },
  "exports": {
    ".": {
      "require": "./dist/sparkdown-language-server.js",
      "import": "./dist/sparkdown-language-server.js"
    },
    "./*": {
      "require": "./dist/*",
      "import": "./dist/*"
    }
  },
  "main": "dist/sparkdown-language-server.js",
  "scripts": {
    "build:sparkdown:dev": "cd ../sparkdown && node ./esbuild.js && cd ../sparkdown-language-server",
    "build:sparkdown:prod": "cd ../sparkdown && node ./esbuild.js --production && cd ../sparkdown-language-server",
    "build:workers:dev": "npm run build:sparkdown:dev",
    "build:workers:prod": "npm run build:sparkdown:prod",
    "build": "node ./esbuild.js"
  },
  "dependencies": {
    "@impower/spark-editor-protocol": "file:../spark-editor-protocol",
    "@impower/sparkdown": "file:../sparkdown",
    "@impower/sparkdown-document-views": "file:../sparkdown-document-views",
    "@impower/textmate-grammar-tree": "file:../textmate-grammar-tree",
    "colord": "^2.9.3",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "esbuild": "^0.25.0"
  },
  "peerDependencies": {
    "@lezer/common": "^1.2.3"
  }
}
