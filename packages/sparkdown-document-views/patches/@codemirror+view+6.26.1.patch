+            start = from
+            break
+          }
+          for (; to < toLine.to; to++) if (this.boundary.test(toLine.text[to - toLine.from])) {
+            end = to
+            break
+          }
+        }
+        let ranges: Range<Decoration>[] = [], m
+        let add = (from: number, to: number, deco: Decoration) => ranges.push(deco.range(from, to))
