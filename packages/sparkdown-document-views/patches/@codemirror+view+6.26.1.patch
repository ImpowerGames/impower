+export function updateAttrs(dom: HTMLElement, prev: Attrs | null, attrs: Attrs | null) {
+  let changed = false
+  if (prev) for (let name in prev) if (!(attrs && name in attrs)) {
+    changed = true
+    if (name == "style") dom.style.cssText = ""
+    else dom.removeAttribute(name)
+  }
