{
  "name": "impower-dev",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "kill": "kill-port 8080",
    "postinstall:textmate-grammar-tree": "cd ../packages/textmate-grammar-tree && npm ci && cd ../../impower-dev",
    "postinstall:sparkdown": "cd ../packages/sparkdown && npm ci && cd ../../impower-dev",
    "postinstall:spark-engine": "cd ../packages/spark-engine && npm ci && cd ../../impower-dev",
    "postinstall:spark-editor-protocol": "cd ../packages/spark-editor-protocol && npm ci && cd ../../impower-dev",
    "postinstall:sparkdown-language-server": "cd ../packages/sparkdown-language-server && npm ci && cd ../../impower-dev",
    "postinstall:sparkdown-screenplay": "cd ../packages/sparkdown-screenplay && npm ci && cd ../../impower-dev",
    "postinstall:sparkdown-screenplay-pdf": "cd ../packages/sparkdown-screenplay-pdf && npm ci && cd ../../impower-dev",
    "postinstall:opfs-workspace": "cd ../packages/opfs-workspace && npm ci && cd ../../impower-dev",
    "postinstall:sparkdown-document-views": "cd ../packages/sparkdown-document-views && npm ci && cd ../../impower-dev",
    "postinstall:spark-web-player": "cd ../packages/spark-web-player && npm ci && cd ../../impower-dev",
    "postinstall": "npm-run-all -p postinstall:*",
    "build:dev:workers:sparkdown-language-server": "cd ../packages/sparkdown-language-server && node ./esbuild.js --outdir=../../impower-dev/out/public && cd ../../impower-dev",
    "build:prod:workers:sparkdown-language-server": "cd ../packages/sparkdown-language-server && node ./esbuild.js --outdir=../../impower-dev/out/public --production && cd ../../impower-dev",
    "build:dev:workers:sparkdown-screenplay-pdf": "cd ../packages/sparkdown-screenplay-pdf && node ./esbuild.js --outdir=../../impower-dev/out/public && cd ../../impower-dev",
    "build:prod:workers:sparkdown-screenplay-pdf": "cd ../packages/sparkdown-screenplay-pdf && node ./esbuild.js --outdir=../../impower-dev/out/public --production && cd ../../impower-dev",
    "build:dev:workers:opfs-workspace": "cd ../packages/opfs-workspace && node ./esbuild.js --outdir=../../impower-dev/out/public && cd ../../impower-dev",
    "build:prod:workers:opfs-workspace": "cd ../packages/opfs-workspace && node ./esbuild.js --outdir=../../impower-dev/out/public --production && cd ../../impower-dev",
    "build:dev:workers": "npm-run-all -p build:dev:workers:*",
    "build:prod:workers": "npm-run-all -p build:prod:workers:*",
    "dev": "tsx ./esbuild.ts --watch",
    "prod": "tsx ./esbuild.ts --production",
    "build": "npm run prod",
    "start": "node ./out/api/index.js"
  },
  "overrides": {
    "esbuild": "^0.18.10"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/secure-session": "^6.2.0",
    "@fastify/static": "^6.10.2",
    "@impower/opfs-workspace": "file:../packages/opfs-workspace",
    "@impower/spark-editor-protocol": "file:../packages/spark-editor-protocol",
    "@impower/spark-engine": "file:../packages/spark-engine",
    "@impower/spark-web-player": "file:../packages/spark-web-player",
    "@impower/sparkdown": "file:../packages/sparkdown",
    "@impower/sparkdown-document-views": "file:../packages/sparkdown-document-views",
    "@impower/sparkdown-language-server": "file:../packages/sparkdown-language-server",
    "@impower/sparkdown-screenplay-pdf": "file:../packages/sparkdown-screenplay-pdf",
    "@impower/sparkle": "file:../packages/sparkle",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0",
    "googleapis": "^159.0.0",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@adobe/css-tools": "^4.3.0-beta.2",
    "@types/browser-resolve": "^2.0.4",
    "@types/gapi": "^0.0.47",
    "@types/gapi.client.drive-v3": "^0.0.5",
    "@types/google.accounts": "^0.0.18",
    "@types/google.picker": "^0.0.51",
    "@types/node": "^20.3.2",
    "@types/ws": "^8.5.5",
    "chokidar": "^3.5.3",
    "esbuild": "^0.18.10",
    "esbuild-plugin-pino": "^2.0.0",
    "kill-port": "^2.0.1",
    "mkcert": "^3.0.0",
    "node-stdlib-browser": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "parse5": "^7.1.2",
    "pino-pretty": "^10.0.0",
    "tiny-glob": "^0.2.9",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.5.2",
    "@lezer/common": "^1.2.3"
  }
}
