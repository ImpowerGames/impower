{
  "name": "impower-dev",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "kill": "kill-port 8080",
    "install:sparkdown": "cd ../packages/sparkdown && npm ci && cd ../../impower-dev",
    "install:spark-engine": "cd ../packages/spark-engine && npm ci && cd ../../impower-dev",
    "install:spark-dom": "cd ../packages/spark-dom && npm ci && cd ../../impower-dev",
    "install:spark-editor-protocol": "cd ../packages/spark-editor-protocol && npm ci && cd ../../impower-dev",
    "install:sparkdown-language-server": "cd ../packages/sparkdown-language-server && npm ci && cd ../../impower-dev",
    "install:sparkdown-screenplay-pdf": "cd ../packages/sparkdown-screenplay-pdf && npm ci && cd ../../impower-dev",
    "install:opfs-workspace": "cd ../packages/opfs-workspace && npm ci && cd ../../impower-dev",
    "install:spark-web-player": "cd ../packages/spark-web-player && npm ci && cd ../../impower-dev",
    "install:sparkdown-document-views": "cd ../packages/sparkdown-document-views && npm ci && cd ../../impower-dev",
    "preinstall": "npm run install:sparkdown && npm run install:spark-engine && npm run install:spark-dom && npm run install:spark-editor-protocol && npm run install:sparkdown-language-server && npm run install:sparkdown-screenplay-pdf && npm run install:opfs-workspace && npm run install:spark-web-player && npm run install:sparkdown-document-views",
    "build:sparkdown-language-server:dev": "cd ../packages/sparkdown-language-server && node ./esbuild.js --outdir=../../impower-dev/out/public && cd ../../impower-dev",
    "build:sparkdown-language-server:prod": "cd ../packages/sparkdown-language-server && node ./esbuild.js --outdir=../../impower-dev/out/public --production && cd ../../impower-dev",
    "build:sparkdown-screenplay-pdf:dev": "cd ../packages/sparkdown-screenplay-pdf && node ./esbuild.js --outdir=../../impower-dev/out/public && cd ../../impower-dev",
    "build:sparkdown-screenplay-pdf:prod": "cd ../packages/sparkdown-screenplay-pdf && node ./esbuild.js --outdir=../../impower-dev/out/public --production && cd ../../impower-dev",
    "build:opfs-workspace:dev": "cd ../packages/opfs-workspace && node ./esbuild.js --outdir=../../impower-dev/out/public && cd ../../impower-dev",
    "build:opfs-workspace:prod": "cd ../packages/opfs-workspace && node ./esbuild.js --outdir=../../impower-dev/out/public --production && cd ../../impower-dev",
    "build:workers:dev": "npm run build:sparkdown-language-server:dev && npm run build:sparkdown-screenplay-pdf:dev && npm run build:opfs-workspace:dev",
    "build:workers:prod": "npm run build:sparkdown-language-server:prod && npm run build:sparkdown-screenplay-pdf:prod && npm run build:opfs-workspace:prod",
    "dev": "tsx ./esbuild.ts --watch",
    "prod": "tsx ./esbuild.ts --production",
    "build": "npm run prod",
    "start": "node ./out/api/index.js"
  },
  "overrides": {
    "esbuild": "^0.18.10"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/secure-session": "^6.2.0",
    "@fastify/static": "^6.10.2",
    "@impower/opfs-workspace": "file:../packages/opfs-workspace",
    "@impower/spark-dom": "file:../packages/spark-dom",
    "@impower/spark-editor-protocol": "file:../packages/spark-editor-protocol",
    "@impower/spark-engine": "file:../packages/spark-engine",
    "@impower/spark-web-player": "file:../packages/spark-web-player",
    "@impower/sparkdown-document-views": "file:../packages/sparkdown-document-views",
    "@impower/sparkdown-language-server": "file:../packages/sparkdown-language-server",
    "@impower/sparkdown-screenplay-pdf": "file:../packages/sparkdown-screenplay-pdf",
    "@impower/sparkle": "file:../packages/sparkle",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0",
    "googleapis": "^126.0.0",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@adobe/css-tools": "^4.3.0-beta.2",
    "@types/browser-resolve": "^2.0.4",
    "@types/gapi": "^0.0.44",
    "@types/gapi.client.drive-v3": "^0.0.1",
    "@types/google.accounts": "^0.0.9",
    "@types/google.picker": "^0.0.39",
    "@types/node": "^20.3.2",
    "@types/ws": "^8.5.5",
    "chokidar": "^3.5.3",
    "esbuild": "^0.18.10",
    "esbuild-plugin-pino": "^2.0.0",
    "kill-port": "^2.0.1",
    "mkcert": "^3.0.0",
    "node-stdlib-browser": "^1.2.0",
    "parse5": "^7.1.2",
    "pino-pretty": "^10.0.0",
    "tiny-glob": "^0.2.9",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.5.2",
    "@lezer/common": "^1.2.3"
  }
}
