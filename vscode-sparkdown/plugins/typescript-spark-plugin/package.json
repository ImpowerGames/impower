{
  "name": "typescript-spark-plugin",
  "displayName": "Typescript Spark Plugin",
  "description": "Provides intellisense for ts files in spark projects.",
  "version": "0.0.1",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "watch": "node build.js --watch",
    "build": "node build.js",
    "package": "node build.js"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "chokidar": "^4.0.3",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "typescript",
    "plugin"
  ],
  "typescript": {
    "languageServicePlugins": [
      {
        "name": "typescript-spark-plugin"
      }
    ]
  }
}
